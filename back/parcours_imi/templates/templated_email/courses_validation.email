{% block subject %}[3A] Confirmation du choix des cours ({{user.first_name}} {{user.last_name}}){% endblock %}

{% block html %}
<!doctype html>
<html>
<body style="font-family: sans-serif; -webkit-font-smoothing: antialiased; font-size: 14px; line-height: 1.4; margin: 0; padding: 0; -ms-text-size-adjust: 100%; -webkit-text-size-adjust: 100%;">

  {{ user.first_name}} {{ user.last_name }},

  <p>
    <strong>Master choisi :</strong> {{ user_parcours.master.name }}
  </p>

  <p>
    <strong>Option choisie :</strong> {{ user_parcours.get_option_display }}
  </p>


  <h2>
    Cours choisis
  </h2>

  <table>
    <tr>
      <th>Nom du cours</th>
      <th>ECTS</th>
      <th>Période</th>
    </tr>
    {% for course in user_parcours.course_choice.main_courses.all %}
      <tr>
        <td>{{ course.name }}</td>
        <td>{{ course.ECTS }}</td>
        <td>{{ course.period }}</td>
      </tr>
    {% endfor %}
    {% for course in user_parcours.course_choice.option_courses.all %}
      <tr>
        <td>{{ course.name }}</td>
        <td>{{ course.ECTS }}</td>
        <td>{{ course.period }}</td>
      </tr>
    {% endfor %}
  </table>

  <p>
    <strong>Règles de validation</strong>
    <ul>
      {% for rule in parcours_validation_data %}
        <li>
          {{ rule.full_message }}
        </li>
      {% endfor %}
    </ul>
  </p>

  <p>
    <strong>Commentaire :</strong> {{ user_parcours.course_choice.comment | default:'N/A' }}
  </p>

</body>
</html>
{% endblock %}
